@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Password Reset Email Sent</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <p>
                            We've sent you an email with a link to reset your password.
                        </p>
                    </div>
                    <p>
                        Please check your email inbox. If you don't receive an email within a few minutes, please check your spam folder.
                    </p>
                    <p>
                        The password reset link will expire in 24 hours.
                    </p>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-area="Identity" asp-page="/Account/Login">Return to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
