@model WackyBusinessCards.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Reset Your Password</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="Token" type="hidden" />
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="New Password" />
                            <label asp-for="Password">New Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-area="Identity" asp-page="/Account/Login">Return to login</a>
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-area="Identity" asp-page="/Account/Register">Need an account? Sign up!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
