@model BusinessCard
@{
    ViewData["Title"] = "Delete Business Card";
}

<div class="container">
    <h1>Delete Business Card</h1>
    <p class="lead text-danger">Are you sure you want to delete this business card?</p>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h4>This card will be permanently deleted</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <partial name="_BusinessCardPartial" model="Model" />
                    </div>
                    
                    <h5>Card Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>
                        
                        <dt class="col-sm-4">Company:</dt>
                        <dd class="col-sm-8">@Model.Company</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
